<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Middleman" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorOnPrimary">@color/red_background</item>
        <item name="colorPrimary">@color/red_light</item>
        <item name="colorAccent">@color/red</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="_descText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="_fontText" parent="_titleText">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="_titleText" parent="_descText">
        <item name="android:fontFamily">@font/tango_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="_bottomAppBar" parent="@style/Widget.Material3.BottomAppBar" />

    <style name="_tabItem" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/tango_bold</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="_progressBar">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="_productImg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>


    <style name="_paddingLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
    </style>

    <style name="_floatingActionBtn">
        <item name="android:layout_width">@dimen/_45sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:layout_margin">@dimen/_15sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="_actionBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:background">@drawable/item_action_shape</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
